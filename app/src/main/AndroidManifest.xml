<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="knf.animeflv">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name="com.github.mmin18.layoutcast.ResetActivity" />
        <activity
            android:name=".Main"
            android:label="@string/app_name" />
        <activity
            android:name=".Splash"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WebDescarga"
            android:label="@string/app_name"
            android:theme="@style/Theme.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.WEB_SEARCH" />

                <category android:name="android.intent.category.APP_BROWSER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Favoritos"
            android:label="@string/app_name" />
        <activity
            android:name=".Chat"
            android:label="@string/app_name" />
        <activity
            android:name=".Directorio.Directorio"
            android:label="@string/app_name" />
        <activity
            android:name=".Descargas"
            android:label="@string/app_name" />
        <activity
            android:name=".Intro"
            android:label="@string/app_name" />
        <activity
            android:name=".Move"
            android:label="@string/app_name"
            android:theme="@style/Theme.Transparent"></activity>
        <activity
            android:name=".info.RelActInfo"
            android:label="@string/app_name"
            android:theme="@style/Theme.Transparent"></activity>
        <activity
            android:name=".BackDownload"
            android:label="@string/app_name"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".Configuracion"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".info.Info"
            android:label="@string/app_name"></activity>

        <receiver
            android:name=".Alarm"
            android:exported="true">
            <intent-filter>
                <action android:name="knf.animeflv.START_ALARM"></action>
            </intent-filter>
        </receiver>
        <receiver android:name=".AutoStart">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".ADS"
            android:label="@string/title_activity_ads"></activity> <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
    </application>

</manifest>
